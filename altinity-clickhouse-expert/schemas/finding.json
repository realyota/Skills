{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ClickHouse Agent Finding",
  "description": "Structured output from a ClickHouse diagnostic sub-agent",
  "type": "object",
  "required": ["agent", "status", "findings"],
  "properties": {
    "agent": {
      "type": "string",
      "description": "Name of the agent that produced this finding",
      "enum": ["memory", "merges", "replication", "reporting", "storage", "errors", "ingestion", "overview", "schema", "metrics", "caches", "dictionaries", "mutations", "text_log", "logs"]
    },
    "status": {
      "type": "string",
      "description": "Overall severity status",
      "enum": ["critical", "major", "moderate", "ok"]
    },
    "findings": {
      "type": "array",
      "description": "List of individual findings",
      "items": {
        "type": "object",
        "required": ["severity", "title", "evidence", "recommendation"],
        "properties": {
          "severity": {
            "type": "string",
            "enum": ["critical", "major", "moderate", "minor"]
          },
          "title": {
            "type": "string",
            "description": "Short description of the finding"
          },
          "evidence": {
            "type": "string",
            "description": "Key metrics or query output supporting the finding"
          },
          "values": {
            "type": "object",
            "description": "Numeric values for dashboards/trending",
            "additionalProperties": {
              "type": "number"
            }
          },
          "recommendation": {
            "type": "string",
            "description": "Suggested action to address the finding"
          }
        }
      }
    },
    "chain_to": {
      "type": "array",
      "description": "Suggested agents to run next for deeper investigation",
      "items": {
        "type": "string"
      }
    }
  }
}
